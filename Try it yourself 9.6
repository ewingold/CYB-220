# Creating the class for Restaurant
class Restaurant:
    def __init__(self, restaurant_name, cuisine_type):
        self.restaurant_name = restaurant_name
        self.cuisine_type = cuisine_type

# Describing the restaurant name and type of food being offered
    def describe_restaurant(self):
        print(f"Restaurant Name: {self.restaurant_name}")
        print(f"Cuisine Type: {self.cuisine_type}")

# Creating a definition for the restaurant being open
    def open_restaurant(self):
        print(f"The restaurant {self.restaurant_name} is open.")

# Creating a class for the ice cream stand
class IceCreamStand(Restaurant):
    def __init__(self, restaurant_name, cuisine_type, flavors):
        super().__init__(restaurant_name, cuisine_type)
        self.flavors = flavors

    def display_flavors(self):
        print("Available Ice Cream Flavors:")
        for flavor in self.flavors:
            print(flavor)

# Creating an instance for the ice cream stand
ice_cream_stand = IceCreamStand("Sweet Treats", "Ice Cream", ["Chocolate", "Vanilla", "Strawberry", "Mint"])

# Calling the display filters method
ice_cream_stand.display_flavors()
