# Creating the "Restaurant" class using the "init" method
class Restaurant:
    def __init__(self, restaurant_name, cuisine_type):
        self.restaurant_name = restaurant_name
        self.cuisine_type = cuisine_type

# Creating the definition for defining the restaurant
    def describe_restaurant(self):
        print(f"Restaurant Name: {self.restaurant_name}")
        print(f"Cuisine Type: {self.cuisine_type}")

# Creating the definition for the restaurant being open
    def open_restaurant(self):
        print(f"The restaurant {self.restaurant_name} is open.")

# Creating a new instance called "restaurant"
restaurant = Restaurant("The Greatest Pizza Place", "Italian")

#Printing out the individual attributes
print("Restaurant Name:", restaurant.restaurant_name)
print("Cuisine Type:", restaurant.cuisine_type)

# Calling out both methods
restaurant.describe_restaurant()
restaurant.open_restaurant()
