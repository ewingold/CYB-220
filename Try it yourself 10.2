# Getting Python to read the file and print contents twice, one time as the replaced Swift variation and one as the original

with open("learning_python.txt", "r") as file:
    for line in file:
        modified_line = line.replace("Python", "Swift")
        print(modified_line.strip())

    file.seek(0)
    lines = file.readlines()
    print("\nPrinting contents by looping over each line stored in a list:\n")
    for line in lines:
        print(line.strip())
