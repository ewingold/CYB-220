def make_sandwich(*items):
    """Printing a summary of the sandwich being ordered."""
    print("Making a sandwich wiht the following items:")
    for item in items:
        print(f"- {item}")

# Calling a function three times with different numbers of arguments
make_sandwich("ham", "cheese", "bacon")
print()
make_sandwich("chived chicked", "lettuce", "tomato")
print()
make_sandwich("turkey", "red peppers", "pesto")

