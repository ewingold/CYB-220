# Making the function.
def make_shirt(size, message):
    """Prints a sentence summarizing the size of the shirt and a message printed on the shirt"""
    print(f"A {size} sized shirt will be printed with the message: '{message}'.")

# Calling the function a first time using positional argumentns
make_shirt("medium", "A cool shirt message")

# Calling the function a second time using keyword arguments
make_shirt(size="large", message="I love Python")
