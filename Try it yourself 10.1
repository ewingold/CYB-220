with open("learning_python.txt", "w") as file:
    file.write("In Python you can: \n")
    file.write("In Python you can define classes. \n")
    file.write("In Python you can declare variables. \n")
    file.write("In Python you can work with lists")
    file.write("In Python you can use if statements. \n")
    file.write("In Python you can use loops. \n")
    file.write("In Python you can create dictionaries for terms. \n")
    file.write("In Python you can define and call functions. \n")

# Getting Python to read the file and print contents twice
with open("learning_python.txt", "r") as file:
    contents = file.read()
    print("Printing contents by reading the entire file at once:\n")
    print(contents)

    file.seek(0)
    lines = file.readlines()
    print("\nPrinting contents by looping over each line stored in a list:\n")
    for line in lines:
        print(line.strip())
