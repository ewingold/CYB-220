# Making the function.
def make_shirt(size="large", message="I love Python"):
    """Prints a sentence summarizing the size of the shirt and a message printed on the shirt"""
    print(f"A {size} sized shirt will be printed with the message: '{message}'.")

# Making large shirt size the default
make_shirt()

# Giving the medium shirt the default message
make_shirt("medium")

# Making a shirt of any size (small) with a different message
make_shirt("small", "This is a cool message")
